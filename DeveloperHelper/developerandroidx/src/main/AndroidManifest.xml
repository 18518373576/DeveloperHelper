<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.developerandroidx">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <receiver
            android:name=".ui.android.broadcastReceiver.AppBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <!--                必须在activity动态申请此广播，清单文件申请无效-->
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="com.example.developerandroidx.HANDLE_NOTIFICATION" />
                <action android:name="com.example.developerandroidx.TEST" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.android.broadcastReceiver.BroadcastReceiverActivity" />
        <activity
            android:name=".ui.android.notification.NotificationActivity"
            android:excludeFromRecents="true"
            android:taskAffinity="" />

        <service
            android:name=".ui.android.service.service.TestIntentService"
            android:exported="false" />
        <service
            android:name=".ui.android.service.service.TestService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ui.android.service.ServiceActivity" />
        <activity android:name=".ui.java.arithmetic.ArithmeticActivity" />
        <activity android:name=".ui.widget.webView.TechnologyWebviewActivity" />
        <activity android:name=".ui.android.animation.AnimationActivity" />
        <activity android:name=".ui.widget.navigationView.NavigationViewActivity" />
        <activity android:name=".ui.android.activity.transitionAnimation.TransitionToActivity" />
        <activity android:name=".ui.android.activity.transitionAnimation.TransitionAnimationActivity" />
        <activity
            android:name=".ui.android.activity.activityforResult.ForResultActivity"
            android:theme="@style/DialogActivityTheme" />
        <activity
            android:name=".ui.android.activity.actionIntent.ActionIntentActivity"
            android:theme="@style/DialogActivityTheme">
            <intent-filter>
                <action android:name="com.example.developerandroidx.ActionIntentActivity" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="example.com"
                    android:port="1080"
                    android:scheme="example" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.android.activity.launchMode.StandardActivity"
            android:launchMode="standard"
            android:theme="@style/DialogActivityTheme" />
        <activity
            android:name=".ui.android.activity.launchMode.SingleTaskActivity"
            android:launchMode="singleTask"
            android:theme="@style/DialogActivityTheme" />
        <activity
            android:name=".ui.android.activity.launchMode.SingleTopActivity"
            android:launchMode="singleTop"
            android:theme="@style/DialogActivityTheme" />
        <activity
            android:name=".ui.android.activity.launchMode.SingleInstanceActivity"
            android:launchMode="singleInstance"
            android:theme="@style/DialogActivityTheme" />
        <activity android:name=".ui.android.dialog.KongZueDialogActivity" />
        <activity android:name=".ui.android.architecture.ArchitectureIndexActivity" />
        <activity android:name=".ui.android.dialog.DialogIndexActivity" />
        <activity
            android:name=".ui.android.activity.lifeCycle.DialogTestctivity"
            android:theme="@style/DialogActivityTheme" />
        <activity android:name=".ui.java.operator.OperatorActivity" />
        <activity
            android:name=".ui.widget.codeView.CodeViewActivity"
            android:theme="@style/CodeViewAppTheme" />
        <activity android:name=".ui.widget.webView.WebViewActivity" />
        <activity
            android:name=".ui.widget.actionBar.ActionBarActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.android.activity.ActivityAnalysisActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>