<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.android.sqlite.DbControlActivity">

    <include
        android:id="@+id/include11"
        layout="@layout/title_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/titleBarHeight"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/include11" />

    <com.example.developerandroidx.view.loadingView.LoadingPage
        android:id="@+id/lp_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/titleBarHeight" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_margin="@dimen/dp20"
        android:background="@drawable/bg_circle_main_color"
        android:elevation="@dimen/dp10"
        android:padding="@dimen/dp15"
        android:src="@mipmap/icon_add"
        android:stateListAnimator="@drawable/selector_btn_animator"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>