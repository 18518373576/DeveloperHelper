<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_interface"
    tools:context=".ui.android.httpRequest.historyBlog.HistoryBlogActivity">

    <include
        layout="@layout/title_bar"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.developerandroidx.view.loadingView.LoadingPage
        android:id="@+id/lv_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/titleBarHeigt"
        app:layout_constraintTop_toBottomOf="@+id/include6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_blog_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/titleBarHeigt"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/include6" />
</androidx.constraintlayout.widget.ConstraintLayout>