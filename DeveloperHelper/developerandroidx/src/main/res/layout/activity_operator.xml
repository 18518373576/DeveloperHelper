<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_interface"
    tools:context=".ui.java.operator.OperatorActivity">

    <include layout="@layout/title_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_operator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/titleBarHeigt"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/dp10" />

    <ImageView
        android:id="@+id/iv_codes"
        style="@style/codeImageViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>