<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.android.service.ServiceActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/title_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/sv_show_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:layout_margin="@dimen/dp10"
        android:layout_weight="1"
        android:background="@drawable/bg_dark_white"
        android:padding="@dimen/dp10"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/tv_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/sp14" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout">

        <Button
            style="@style/ComonButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="Start Service" />

        <Button
            style="@style/CancelButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="Stop Service" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3">

        <Button
            style="@style/ComonButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="Start Foreground" />

        <Button
            style="@style/CancelButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="Stop Foreground" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            style="@style/ComonButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="Bind Service" />

        <Button
            style="@style/CancelButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="Unbind Service" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            style="@style/ComonButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="AIDL" />

        <Button
            style="@style/CancelButtonStyle"
            android:layout_width="@dimen/dp120"
            android:layout_margin="@dimen/dp10"
            android:text="Unbind Service"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        style="@style/codeImageViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>