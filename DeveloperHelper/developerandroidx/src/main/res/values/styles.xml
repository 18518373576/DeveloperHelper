<resources>

    <!--    通用主题-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorMain</item>
        <item name="colorAccent">@color/colorMain</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/colorMain</item>
    </style>

    <!--    通用主题,没有actionBar-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_interface</item>
        <item name="colorPrimaryDark">@color/bg_interface</item>
        <item name="colorAccent">@color/colorMain</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/bg_interface</item>
    </style>
    <!--    dialogActivity通用主题-->
    <style name="DialogActivityTheme" parent="Theme.AppCompat.Light.Dialog">

        <!--没有标题-->
        <item name="windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--是否浮动-->
        <item name="android:windowIsFloating">true</item>
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowFullscreen">false</item>
        <!--背景：透明-->
        <item name="android:windowBackground">@color/tran</item>
        <!--dialog的整个屏幕的背景是否有遮障层-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--弹出动画-->
        <!--        <item name="android:windowAnimationStyle">@style/AnimSlideBottom</item>-->

    </style>

    <!--    展示代码界面主题-->
    <style name="CodeViewAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/codeViewBackground</item>
        <item name="colorPrimaryDark">@color/codeViewBackground</item>
        <item name="colorAccent">@color/codeViewBackground</item>
        <item name="android:screenOrientation">landscape</item>
    </style>

    <!--    首页recyclerView样式-->
    <style name="CommonRcvStyle">
        <item name="android:paddingLeft">@dimen/dp5</item>
        <item name="android:paddingRight">@dimen/dp5</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!--    通用button样式-->
    <style name="CommonButtonStyle">
        <item name="android:layout_width">@dimen/dp80</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:stateListAnimator">@drawable/selector_btn_animator</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:layout_width">@dimen/dp80</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:stateListAnimator">@drawable/selector_btn_animator</item>
        <item name="android:background">@drawable/selector_gray_btn</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--    页面的跳转codeview按钮-->
    <style name="codeImageViewStyle">
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:layout_margin">@dimen/dp20</item>
        <item name="android:layout_width">@dimen/dp50</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:stateListAnimator">@drawable/selector_btn_animator</item>
        <item name="android:background">@drawable/bg_circle_main_color</item>
        <item name="android:src">@mipmap/icon_code</item>
    </style>
    <!--    通用标题text样式-->
    <style name="commonTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp10</item>
    </style>
    <!--    通用文字样式-->
    <style name="commonText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:spacing">@dimen/dp3</item>
    </style>
</resources>
